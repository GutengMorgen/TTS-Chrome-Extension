{
    "manifest_version" : 3,
    "name" : "TTS extension",
    "description" : "este es una extension",
    "version" : "1.0",
    "icons" : {
        "128" : "logo.png"
    },

    "background": {
        "service_worker": "background.js"
    },

    "permissions": [
        "tabs",
        "activeTab",
        "scripting"
    ],

    "content_scripts": [
        {
          "matches": ["<all_urls>"],
          "css": ["stylesTTS.css"],
          "js": ["content.js"],
          "run_at": "document_end"
        }
    ],

    "action": {
        "default_popup": "index.html",
        "default_title": "My Extension"
    }
}